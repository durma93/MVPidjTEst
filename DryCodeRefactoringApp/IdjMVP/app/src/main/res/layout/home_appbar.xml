<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/idjtv_icon2" />

    <ImageView
        android:id="@+id/searchButon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/imageLogo"
        android:layout_toStartOf="@+id/imageLogo"
        android:src="@drawable/search" />
    <ImageView
        android:id="@+id/lineRainbow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/rainbow"
        android:layout_below="@id/logo"/>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/user_logo" />

</RelativeLayout>