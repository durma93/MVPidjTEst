<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_item_card_view"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/menuItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/menuItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/menuItemImage"
            android:textSize="20sp"
            android:text="Name"/>
        <TextView
            android:id="@+id/menuItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Price"
            android:layout_below="@id/menuItemName"
            android:layout_toRightOf="@id/menuItemImage"
            />
        <TextView
            android:id="@+id/menuItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/menuItemImage"
            android:layout_below="@id/menuItemPrice"/>
        <TextView
            android:id="@+id/menuItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginRight="8dp"
            android:layout_below="@id/menuItemCategory"
            android:layout_toRightOf="@id/menuItemImage"
            android:layout_marginBottom="8dp"

            />
    </RelativeLayout>


</android.support.v7.widget.CardView>